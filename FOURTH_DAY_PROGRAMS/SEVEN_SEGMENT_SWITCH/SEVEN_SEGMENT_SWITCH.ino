int count = 0;
int previousState = 0;
int a = 3;
int b = 4;
int c = 5;
int d = 6;
int e = 7;
int f = 8;
int g = 9;

void setup() {
  pinMode(switchPin, INPUT);
  pinMode(a, OUTPUT);
  pinMode(b, OUTPUT);
  pinMode(c, OUTPUT);
  pinMode(d, OUTPUT);
  pinMode(e, OUTPUT);
  pinMode(f, OUTPUT);
  pinMode(g, OUTPUT);
}

void loop() {
//  testProgram();
  valueOfSwitch = digitalRead(switchPin);
//  digitalWrite(13, valueOfSwitch);
  
  if(valueOfSwitch == HIGH && valueOfSwitch != previousState) {
    if(count < 9) {
      count = count + 1;  
    }
    else {
      count = 0;
    }
  }
  previousState = valueOfSwitch;
  displayNumber(count);
}

void testProgram() {
  digitalWrite(a, LOW);
  digitalWrite(b, HIGH);
  digitalWrite(c, HIGH);
  digitalWrite(d, LOW);
  digitalWrite(e, LOW);
  digitalWrite(f, LOW);
  digitalWrite(g, LOW);
  delay(10000);
}

